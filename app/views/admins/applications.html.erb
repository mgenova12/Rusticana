
<div class= "container">
  <h1>Applications</h1>

 <div class="application-table">
   <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Position</th>
      <th>Phone Number</th>
      <th>View Application</th>
    </tr>

   <% @applications.each do |application| %>
      <tr> 
         <td> <%= application.first_name.capitalize %> </td>
         <td> <%= application.last_name.capitalize %></td>
         <td> <%= application.position.capitalize %></td>
         <td> <%= application.phone_number.capitalize %></td>
         <td> <%= link_to "View", "applications/#{application.id}" %></td>
      </tr>

   <% end %>

   </table>
</div>

<div class="digg_pagination">
   <%= will_paginate @applications %>
</div>

</div>