<div class= "container">

<h1>Edit Special</h1>

    <%= form_for [:admin, @special], :url => {:controller => :specials, action: :update} do |f| %>
      <%= render 'shared/errors', object: @photo %>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "#{@special.name}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "#{@special.description}", class: 'form-control' %>
      </div>

      <%= f.submit 'EDIT', class: 'btn btn-primary' %>

    <% end %>

  <%= form_tag "/admin/specials/#{@special.id}", method: :delete do %>

    <button class='btn btn-danger'> DELETE</button>
  <% end %>

</div>