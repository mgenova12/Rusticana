<div class= "container">

<div class="page-header"><h1>Edit Special</h1>

    <%= form_for @special, :url => {:controller => :specials, action: :update} do |f| %>
      <%= render 'shared/errors', object: @photo %>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "#{@special.name}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "#{@special.description}", class: 'form-control' %>
      </div>

      <%= f.submit 'Upload', class: 'btn btn-primary' %>
    <% end %>



</div>